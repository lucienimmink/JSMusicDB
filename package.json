{
  "scripts": {
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start": "concurrently --kill-others --names tsc,web-dev-server \"npm run tsc:watch\" \"web-dev-server --app-index index.html --node-resolve --open --watch\"",
    "tsc:watch": "tsc --watch",
    "postversion": "git push && git push --tags",
    "docker:build": "npm run --silent build && docker build -t jsmusicdb/jsmusicdb:latest .",
    "docker:start": "npm run --silent docker:build && docker run --rm -d -p 3000:80/tcp jsmusicdb/jsmusicdb:latest",
    "docker:push": "docker push jsmusicdb/jsmusicdb:latest",
    "preinstall": "npx npm-force-resolutions"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^1.10.0",
    "@open-wc/eslint-config": "^4.3.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/node": "^14.17.6",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "@web/dev-server": "^0.1.20",
    "@web/dev-server-rollup": "^0.3.7",
    "concurrently": "^6.2.0",
    "deepmerge": "^4.2.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "pinst": "^2.1.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.54.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-filesize": "^9.1.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "name": "jsmusicdb",
  "version": "3.7.1",
  "description": "Web standards music database and player",
  "author": "Lucien Immink",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@addasoft/lit-element-router": "^2.0.5",
    "@addasoft/musicdbcore": "^1.8.0",
    "@thebespokepixel/es-tinycolor": "^2.1.1",
    "diacritics-normalizr": "^1.0.3",
    "fast-average-color": "^6.4.1",
    "fuse.js": "^6.4.6",
    "idb-keyval": "^5.0.6",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1",
    "lit-virtualizer": "^0.4.2",
    "rollup-plugin-dotenv": "^0.3.0",
    "rollup-plugin-version-injector": "^1.3.3"
  },
  "resolutions": {
    "hosted-git-info": "^4.0.0",
    "trim-newlines": "^4.0.0"
  }
}
